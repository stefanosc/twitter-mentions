# Use Thin for our web server
gem 'thin'

gem 'activesupport', '~>4.1'
gem 'activerecord', '~>4.1'

gem 'rake'
gem 'bcrypt-ruby'
gem 'twitter'
gem 'geocoder'
gem 'pry'
gem 'pry-byebug'

