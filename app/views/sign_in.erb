<div id="loginbox" style="margin-top:15%;" class="mainbox col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
  <%= styled_flash %>
  <% if @error %>
  <div id="login-alert" class="alert alert-danger col-sm-12">
    <div class="errors"><%= @error %></div>
  </div>
  <% end %>

  <div class="panel panel-info" >
    <div class="panel-heading">
      <div class="panel-title">Sign In</div>
    </div>

    <div style="padding-top:30px" class="panel-body" >



      <form id="loginform" class="form-horizontal" role="form" method="post" action="/sign_in">

        <div style="margin-top:10px" class="form-group">
          <!-- Button -->

          <div class="col-sm-12 controls">
              <a class="btn btn-block btn-social btn-twitter" href="/sign_in_with_twitter">
                <i class="fa fa-twitter"></i>Login with Twitter
              </a>
          </div>
        </div>

      </form>

    </div>
  </div>
</div>
